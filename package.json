{
  "name": "chat-lounge",
  "version": "1.0.0",
  "description": "Chat Web Application",
  "main": "index.js",
  "scripts": {
    "test": "mocha ./src/**/.test.js ./tests/**/.test.js --require @babel/register",
    "test:e2e": "mocha ./tests/e2e/*.test.js --require @babel/register",
    "test:unit": "mocha ./src/**/*.unit.test.js --require @babel/register",
    "test:integration": "mocha ./src/**/*.integration.test.js --require @babel/register",
    "test:watch": "nodemon --exec yarn test",
    "test:coverage": "nyc --reporter=lcov --reporter=html --reporter=text yarn run test",
    "build": "rimraf dist && babel -D ./src -d ./dist",
    "dev": "yarn run build && nodemon -- node ./dist/index.js",
    "start": "yarn run build && node ./dist/index.js",
    "lint": "eslint ./src",
    "fix": "eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mycok/Chat-Lounge.git"
  },
  "keywords": [
    "Node",
    "Express",
    "mongodb",
    "mongoose"
  ],
  "author": "mycok",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mycok/Chat-Lounge/issues"
  },
  "homepage": "https://github.com/mycok/Chat-Lounge#readme",
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "expect": "^25.3.0",
    "husky": "^4.2.5",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "mongoose": "^5.9.9",
    "winston": "^3.2.1"
  }
}
